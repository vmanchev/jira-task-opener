{
  "name": "Jira task opener",
  "description": "Quick and easy way to open a Jira task",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "jira.html",
    "default_icon": "jira.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+J"
      },
      "description": "Opens Jira task"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}